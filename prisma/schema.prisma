generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Mahasiswa {
  nama          String
  nim           String @id
  jurusan       String
  kelas         String
  jenis_kelamin Jenis_kelamin
}

enum Jenis_kelamin {
  L
  P
}

model User {
  id         Int      @id @default(autoincrement())
  username   String   @unique
  password   String   
  role       UserRole


  created_at DateTime @default(now())
}

enum UserRole {
  ADMIN
  USER
}
